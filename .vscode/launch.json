{
    "version": "0.2.0",
    "configurations": [
        {
            "name": ".NET Core Launch (web)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/FilmRecomendations.WebApi/bin/Debug/net9.0/FilmRecomendations.WebApi.dll",
            "args": [],
            "cwd": "${workspaceFolder}/FilmRecomendations.WebApi",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            }
        },
        {
            "name": ".NET Core Attach",
            "type": "coreclr",
            "request": "attach"
        },
        {
            "name": "Frontend Launch",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run",
                "dev"
            ],
            "cwd": "${workspaceFolder}/FilmRecommendations.Frontend",
            "console": "integratedTerminal"
        },
        {
            "name": "React Frontend (Chrome)",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:5173",
            "webRoot": "${workspaceFolder}/filmrecommendations-react-frontend/src",
            "sourceMaps": true,
            "preLaunchTask": "npm: dev - filmrecommendations-react-frontend",
            "userDataDir": "${workspaceFolder}/.vscode/chrome-debug-profile"
        },
        {
            "name": "React Frontend (Edge)",
            "type": "msedge",
            "request": "launch",
            "url": "http://localhost:5173",
            "webRoot": "${workspaceFolder}/filmrecommendations-react-frontend/src",
            "sourceMaps": true,
            "preLaunchTask": "npm: dev - filmrecommendations-react-frontend",
            "userDataDir": "${workspaceFolder}/.vscode/edge-debug-profile"
        },
        {
            "name": "React Frontend (Attach)",
            "type": "chrome",
            "request": "attach",
            "port": 9222,
            "url": "http://localhost:5173",
            "webRoot": "${workspaceFolder}/filmrecommendations-react-frontend/src",
            "sourceMaps": true
        }
    ],
    "compounds": [
        {
            "name": "Run Backend and Frontend",
            "configurations": [
                ".NET Core Launch (web)",
                "Frontend Launch"
            ]
        }
    ]
}